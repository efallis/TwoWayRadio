<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="ActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:homeAsUpIndicator">@drawable/back</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
    </style>
    <style name="TitleTextStyle"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogFragment" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@drawable/background_view_rounded_single</item>
    </style>
</resources>